{% extends 'base.html.twig' %}
{% block body %}
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Table des événements</h4>
                <p class="card-description">
                </p>
                <div class="container">
                    <div class="row">
                        <div class="offset-2 col-6">
                            {{form_start(search_form)}}
                            {{ form_widget(search_form.selon,{ 'attr': {'placeholder': "selon..."  }}) }}
                            {{ form_widget(search_form.rech,{ 'attr': {'placeholder': "rech..."  }}) }}
                            {{ form_widget(search_form.Rechercher,{ 'attr': {'class': "btn btn-success"  }}) }}

                            {{form_end(search_form)}}
                            {{form_start(tri_form)}}
                            {{ form_widget(tri_form.selon,{ 'attr': {'placeholder': "selon..."  }}) }}
                            {{ form_widget(tri_form.Trier,{ 'attr': {'class': "btn btn-success"  }}) }}

                            {{form_end(tri_form)}}
                        </div>
                    </div>
                </div>
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                        <tr>
                            <th>nom</th>
                            <th>Date début</th>
                            <th>Date fin</th>

                            <th>description</th>
                            <th>organisateur</th>
                            <th>prix </th>
                            <th>nombre de participant</th>
                            <th>emplacement</th>
                            <th>Image</th>
                            <th>action</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for e in events %}
                        <tr>
                            <td>{{ e.nomEvenement }}</td>
                            <td>{{ e.dateDebut |date('d-m-Y') }}</td>
                            <td>{{ e.dateFin |date('d-m-Y') }}</td>
                            <td>{{ e.description }}</td>
                            <td>{{ e.organisateur }}</td>

                            <td> {{ e.prix }} </i></td>
                            <td>{{ e.nbrParticipant }}</td>
                            <td><label >{{ e.emplacement }}</label></td>
                            <td><img src="{{ asset('/images/'~e.image) }}" alt="" style="width: 50px : height:50px"></td>
                            <td><a class="badge badge-danger" href="{{ path('delete_event',{'id':e.reference})}}"><i class="bi bi-trash"></i><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                                        <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"/>
                                        <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"/>
                                    </svg></a></td>

                            <td><a class="badge badge-danger" href="{{ path('edit_event',{'id':e.reference})}}"><i class="bi bi-pencil-square"></i><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                                        <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
                                        <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"/>
                                    </svg></a></td>

                        </tr>

                       {% endfor %}



                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>
    {#  {{ form_start('search_form') }}
    <form class="nav-link mt-2 mt-md-0 d-none d-lg-flex search">
        {{ form_widget(search_form.rech, { 'attr': {'class': 'form-control',
            'placeholder' : 'search events'} }) }}
        {{ form_widget(search_form.selon, { 'attr': {'class': 'form-control',
            'placeholder' : 'search events'} }) }}
        <li class="nav-item"> <a class="nav-link" href="{{ path('rechercher_event') }}"> Rechercher Evénement</a></li>

    </form>
    {{ form_end('search_form') }}#}

{% endblock %}