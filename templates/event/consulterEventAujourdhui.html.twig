{% extends 'base.html.twig' %}
{% block body %}
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="page-header">

                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="{{ path('consulter_event')}}">Evénements</a></li>
                            <li class="breadcrumb-item " aria-current="page"><a href="{{ path('ajouter_event')}}"> ajouter Evénement</a></li>
                        </ol>
                    </nav>
                </div>
                <h5 class="card-title">les événements d'aujourd'hui</h5>
                <p class="card-description">
                </p>
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                        <tr>
                            <th>nom</th>
                            <th>Data début</th>
                            <th>Data fin</th>

                            <th>description</th>
                            <th>organisateur</th>
                            <th>prix </th>
                            <th>nombre de participant</th>
                            <th>emplacement</th>
                            <th>Image</th>

                        </tr>
                        </thead>
                        <tbody>
                        {% for e in events %}
                            <tr>
                                <td>{{ e.nomEvenement }}</td>
                                <td>{{ e.dateDebut |date('d-m-Y') }}</td>
                                <td>{{ e.dateFin |date('d-m-Y') }}</td>
                                <td>{{ e.description }}</td>
                                <td>{{ e.organisateur }}</td>

                                <td> {{ e.prix }} </i></td>
                                <td>{{ e.nbrParticipant }}</td>
                                <td><label >{{ e.emplacement }}</label></td>
                                <td><img src="{{ asset('/images/'~e.image) }}" alt="" style="width: 50px : height:50px"></td>



                            </tr>

                        {% endfor %}


                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

{% endblock %}