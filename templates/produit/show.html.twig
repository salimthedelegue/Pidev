{% extends 'base.html.twig' %}

{% block title %}Produit{% endblock %}

{% block body %}
    <h1>Produit</h1>

    <table class="table">
        <tbody>
            <tr>
                <th width="200">Id</th>
                <td>{{ produit.id_produit }}</td>
            </tr>
            <tr>
                <th>Nom_produit</th>
                <td>{{ produit.nomProduit }}</td>
            </tr>
            <tr>
                <th>Description_produit</th>
                <td>{{ produit.descriptionProduit }}</td>
            </tr>
            <tr>
                <th>Image_produit</th>
                
                <td height="300"><img src=" {{ asset('/upload/images/'~produit.getImageProduit())}}" class="mx-auto d-block" style="width:30%;height:100%"> </td>
                 

            </tr>
            <tr>
                <th>Lien_produit</th>
                <td>{{ produit.lienProduit }}</td>
            </tr>
            <tr>
                <th>Prix_produit</th>
                <td>{{ produit.prixProduit }}</td>
            </tr>
            <tr>
                <th>Categorie_produit</th>
                <td>{{ produit.categorieProduit }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('produit_index') }}">back to list</a>

    <a href="{{ path('produit_edit', {'id': produit.id_produit}) }}">edit</a>

    {{ include('produit/_delete_form.html.twig') }}
{% endblock %}
