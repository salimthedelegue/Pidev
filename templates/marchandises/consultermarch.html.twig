{% extends 'base.html.twig' %}
{% block body %}
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Table des marchandisese</h4>
                <p class="card-description"> <code>Faite attention lors de la supmod des donn√©es!</code></p>
                <div class="table-responsive">
                    <table class="table table-hover">

                        <thead>
                        <tr>
                            <th>ID</th>
                            <th>Nom Marchandise</th>
                            <th>Categorie</th>
                            <th>Date D'arrivee</th>
                            <th>Quantite</th>
                            <th>Prixu</th>
                            <th>Prixt</th>
                            <th>Nom Fourn</th>
                            <th></th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for marchandise in marchandises %}
                            <tr>
                                <td class="text-success">{{ marchandise.idMarchandise }}</td>
                                <td>{{ marchandise.nomMarchandise }}</td>
                                <td>{{ marchandise.categorieMarchandise }}</td>
                                <td>{{ marchandise.dateArrive }}</td>
                                <td>{{ marchandise.quantite }}</td>
                                <td>{{ marchandise.prixUnitaireMarchandise }}</td>
                                <td>{{ marchandise.prixTotalMarchandise }}</td>
                                <td class="text-info"> {{ marchandise.idFournisseur }} </td>
                                <td><a href="{{ absolute_url(asset('')) }}marchandises/delete/{{ marchandise.idMarchandise }}"><label class="btn btn-outline-danger btn-icon-text"><i class="mdi mdi-delete-forever Icon-md"></i> Delete</label></a>
                                    <a href="{{ absolute_url(asset('')) }}marchandises/update/{{ marchandise.idMarchandise }}"><label class="btn btn-outline-warning btn-icon-text"><i class="mdi mdi-file-check btn-icon-append Icon-md"></i> Edit</label></a>
                                </td>

                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}